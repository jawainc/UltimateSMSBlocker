<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:weightSum="1" android:textAlignment="center" android:padding="0dp"
              tools:context=".AddRangeNumberForm"
              android:id="@+id/add_range_number_form" android:visibility="invisible">

    <!-- TODO: Update blank fragment layout -->

    <android.support.design.widget.TextInputEditText
            android:layout_width="230dp"
            android:layout_height="wrap_content" android:id="@+id/add_range_number_from_editor" android:layout_gravity="center"
            android:layout_marginTop="60dp" android:numeric="integer" android:hint="From"/>
    <android.support.design.widget.TextInputEditText
            android:layout_width="230dp"
            android:layout_height="wrap_content" android:id="@+id/add_range_number_to_editor" android:layout_gravity="center"
            android:layout_marginTop="20dp" android:numeric="integer" android:hint="To"/>
    <android.support.v7.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/add_range_number_button" android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp" android:text="Add" android:textColor="#ffffff"
            style="@style/Widget.AppCompat.Button.Colored"
    />

</LinearLayout>
