<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/read_message_date" android:layout_gravity="center_horizontal" android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp" android:gravity="center_horizontal" android:textSize="10dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/reade_message_message" android:layout_marginLeft="10dp" android:layout_marginRight="10dp"
            android:background="@drawable/round_corner" android:padding="7dp" android:textSize="13dp"
            android:typeface="normal" android:textColor="#000000"/>
</LinearLayout>